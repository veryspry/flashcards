extends layout

block main
	section.namecard
		div.namecard-hello

			if name

				p.namecard-greeting Welcome, #{name}!
				form.namecard-exit(action='/goodbye', method='post')
					button(type='submit')
						img(src='../static/img/close.svg')

			else

				p.namecard-greeting Welcome, student!

		block intro

	block card 

